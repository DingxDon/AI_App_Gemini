<resources>

    <!-- Light Theme -->
    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/SpotifyGreen</item>
        <item name="colorPrimaryDark">@color/SpotifyDarkGreen</item>
        <item name="colorAccent">@color/SpotifyLightGreen</item>
        <item name="android:windowBackground">@color/SpotifyLightBackground</item>
        <!-- Add more customizations as needed -->
    </style>

    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/SpotifyDarkGreen</item>
        <item name="colorPrimaryDark">@color/SpotifyDarkGreen</item>
        <item name="colorAccent">@color/SpotifyGreen</item>
        <item name="android:windowBackground">@color/SpotifyDarkBackground</item>
        <!-- Add more customizations as needed -->
    </style>


</resources>
