<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/background_border_with_google_colors.xml -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#4285F4" />
        </shape>
    </item>

    <!-- Google colors -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#1A73E8" />
        </shape>
    </item>

    <item
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#EA4335" />
        </shape>
    </item>

    <item
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#FBBC04" />
        </shape>
    </item>

    <item
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#34A853" />
        </shape>
    </item>
</layer-list>
