<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:background="@android:color/transparent"
    app:cardCornerRadius="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/SpotifyGreen">

        <ImageButton
            android:id="@+id/side_menu_ib"
            android:layout_width="20sp"
            android:layout_height="25sp"
            android:layout_marginStart="20dp"
            android:background="@drawable/hamburger_menu_icon"
            android:importantForAccessibility="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"/>

        <TextView
            android:id="@+id/Current_Chat_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="GemBot AI"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"

            app:layout_constraintStart_toEndOf="@+id/side_menu_ib"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"/>

        <ImageButton
            android:id="@+id/Start_new_chat_ib"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/check_box_pen"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@+id/dropdown_menu_ib"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"/>

        <ImageButton
            android:id="@+id/dropdown_menu_ib"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/drop_down_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
